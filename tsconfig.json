{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules/**/*", ".vscode/**/*"]
}
